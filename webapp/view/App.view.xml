<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5-routing-tutorial.controller.App">
    <Button
        text="Click me to increase the counter by 1"
        press=".incrementBy1" />
    <Text id="counter" text="0"/>

    <List 
        id="episodeOverview"
        headerText="{/title}"
        items="{/episodes}">
        <items>
            <StandardListItem
                title="{title}"
                description="{index}" />
        </items>
    </List>
</mvc:View>